<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:id="@+id/layoutFindUrlTop"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/btnSecurityPageInfo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_security"
                android:scaleType="fitCenter"
                android:contentDescription="@null"
                android:layout_marginStart="4dp"/>
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edtUrl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:imeOptions="actionGo"
                android:selectAllOnFocus="true"
                android:maxLines="1"
                android:inputType="text"
                android:paddingHorizontal="6dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="@string/hint_input_text_search" />
            <ImageView
                android:id="@+id/btnWebRefresher"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_refresh"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/popupMenuBtn"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_popup_menu"
                android:scaleType="center"
                android:contentDescription="@null"
                android:onClick="createPopupMenu"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layoutFindPanel"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/btnDownFindWord"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_down"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp"/>
        <ImageButton
            android:id="@+id/btnUpFindWord"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_up"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="2dp">
            <EditText
                android:id="@+id/edtFindWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/hint_input_text_find_in_page"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/btnCloseDialogFindWord"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</FrameLayout>