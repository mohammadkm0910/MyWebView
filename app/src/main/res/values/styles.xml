<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">rtl</item>
    </style>
    <style name="RadioFaLanguageFix">
        <item name="android:gravity">start|center</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:drawablePadding">12dp</item>
    </style>
    <style name="AnimationPopupWindow">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>